    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvNumberInfo"
        android:id="@+id/tvInfoKeuntungan"
        android:text="Penjelasannya seperti biasa kalau tidak bisa janganmi dulu karena menganggu ji nanti"
        />

</RelativeLayout>