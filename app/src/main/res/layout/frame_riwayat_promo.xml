<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/cvPenggunaanPromo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rellay_nama_promo"
            android:paddingLeft="5dp"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btnPengaturanPromo">

                <TextView
                    android:id="@+id/tvNamaPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Nama Promo"
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHariPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNamaPromo"
                    android:layout_alignLeft="@+id/tvNamaPromo"
                    android:text="Hari"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvTanggalPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNamaPromo"
                    android:layout_alignRight="@+id/tvNamaPromo"
                    android:text="Tanggal"
                    android:textSize="11sp" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/btnPengaturanPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/textColorWhite"
                android:layout_marginLeft="10dp"
                android:paddingTop="6dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingBottom="6dp"
                android:src="@drawable/ic_more_point_24dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rellay_nama_promo"
            android:background="#C3C1C1" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>