<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.AktivitasFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/background_second"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:layout_centerInParent="true"
            android:textColor="@color/textColorWhite"
            android:textSize="30sp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat\nPembayaran"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@drawable/bg_button_history_normal"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:layout_marginRight="6dp"
            android:id="@+id/tvRiwayatPembayaran"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat\nPromo"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/bg_button_history_normal"
            android:padding="5dp"
            android:id="@+id/tvRiwayatPromo"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat\nPerjalanan"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:textSize="14sp"
            android:background="@drawable/bg_button_history_normal"
            android:padding="5dp"
            android:id="@+id/tvRiwayatPerjalanan"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        >


    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>