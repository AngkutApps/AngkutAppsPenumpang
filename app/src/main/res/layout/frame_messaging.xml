<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lay_toolbar"
        android:padding="13dp"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Driver"
            android:textColor="@color/textColorWhite"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/tv_nama_driver"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD 1000 EM"
            android:textColor="#B3FFFFFF"
            android:id="@+id/tv_plat_driver"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/etPesan"
        android:layout_marginBottom="10dp"
        android:id="@+id/rvPesan"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lay_toolbar"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <EditText
        android:id="@+id/etPesan"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgButtonSend"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="13dp"
        />

    <ImageView
        android:layout_marginRight="13dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/imgButtonSend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_send_24"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>