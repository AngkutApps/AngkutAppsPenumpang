<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/ic_arrow_back_black_24dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/lv_payment"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_button_book_now"
        android:layout_margin="10dp"
        android:padding="20dp">
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="4">
            <TextView
                android:id="@+id/tv_tujuan"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Tujuan"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="50.000"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BFBFBF"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:gravity="center">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OVO"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:background="#25D42D"/>
            <LinearLayout
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textSize="12sp"
                    android:textColor="#BFBFBF"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Rp. 50.000"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#bfbfbf"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_weight="2"
                android:layout_height="30dp"
                android:src="@drawable/wallet"
                android:backgroundTint="#bfbfbf"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#bfbfbf"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="20dp"
                android:background="#bfbfbf"
                android:src="@drawable/ic_more_horiz_black_24dp"
                android:backgroundTint="#bfbfbf"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_book_now"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="BOOK NOW"
            android:background="@drawable/bg_button_next"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="#01C871"/>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#43000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tint="#D80D0D"
                android:src="@drawable/ic_location_on_black_24dp"
                android:background="@drawable/bg_search"
                android:padding="10dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search ..."
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_cancel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/bg_button_next"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#01C871"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lv_input_tujuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp">
                <EditText
                    android:id="@+id/et_tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="I'm Going To"
                    android:drawableRight="@drawable/ic_mic_black_24dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:background="@drawable/bg_button_next"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="#01C871"/>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lv_penjemputan"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_kas"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keberangkatan : Gowa"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya : 20.000"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@android:color/black"/>
        <LinearLayout
            android:id="@+id/lv_driver"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver : "
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_merk_mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merk Mobil : "
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tv_plat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plat : "
                android:textSize="15sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@android:color/black"/>
            <Button
                android:id="@+id/btn_telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telpon"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_mencari"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mencari pengemudi ..."
            android:textAlignment="center"
            android:layout_marginBottom="5dp"/>
        <ProgressBar
            android:id="@+id/progres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>