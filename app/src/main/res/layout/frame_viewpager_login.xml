<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/imgSwipeLogin"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/titleImageSwipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgSwipeLogin"
            android:layout_centerHorizontal="true"
            android:text="@string/title_sing_in"
            android:textAlignment="center"
            android:textColor="@color/textBlack"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleImageSwipe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/desc_title_sing_in"
            android:textAlignment="center"
            android:textSize="13sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>